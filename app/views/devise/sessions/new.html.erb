<div class="wrapper2 fadeInDown">
	<div id="formContent">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="field" id="login" class="fadeIn second" name="login" placeholder="login">
		  	<br>
		    <%= f.email_field :email, autofocus: true, placeholder: "Email: hello@ga.com", autocomplete: "email" %>
		  </div>

		  <div class="field" id="password" class="fadeIn third" name="login" placeholder="login">
		    <br />
		    <%= f.password_field :password, placeholder: "Password: 123ewq", autocomplete: "current-password" %>
		  </div>

		  <% if devise_mapping.rememberable? %>
		    <div class="field">
		      <%= f.check_box :remember_me %>
		      <%= f.label :remember_me %>
		    </div>
		  <% end %>

		  <div class="fadeIn fourth" value="Log In">
		    <%= f.submit "Log in" %>
		  </div>
		<% end %>
		<%= render "devise/shared/links" %>
		<br>
	</div>
</div>