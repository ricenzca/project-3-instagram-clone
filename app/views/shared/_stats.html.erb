<% @user ||= current_user %>
<div class="stats">

  <a class="link-deco" href="<%= following_user_path(@user) %>">
    <span id="following" class="bold stat">
      <%= @user.following.count %>
    </span> following
  </a>

  <a class="link-deco" href="<%= followers_user_path(@user) %>">
    <span id="followers" class="bold stat">
      <%= @user.followers.count %>
    </span> followers
  </a>
</div>